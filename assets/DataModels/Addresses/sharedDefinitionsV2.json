{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/openintegrationhub/Data-and-Domain-Models/blob/master/src/main/schema/addresses/sharedDefinitionsV2.json",
  "title": "SharedDefinitions",
  "description": "Shared Definitions for the Master Data Model for Addresses to use in the Open Integration Hub",
  "definitions": {
    "Address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string",
          "description": "Street of the address",
          "examples": [
            "Hohestr."
          ]
        },
        "streetNumber": {
          "type": "number",
          "description": "Street numer of the address",
          "examples": [
            "3"
          ]
        },
        "unit": {
          "type": "string",
          "description": "",
          "examples": [
            "a",
            "f"
          ]
        },
        "zipCode": {
          "type": "string",
          "description": "Zipcode/postalcode of the address",
          "examples": [
            "50667"
          ]
        },
        "city": {
          "type": "string",
          "description": "City of the address",
          "examples": [
            "Cologne"
          ]
        },
        "district": {
          "type": "string",
          "description": "District of the address",
          "examples": [
            "Alstadt-Sued"
          ]
        },
        "region": {
          "type": "string",
          "description": "Region of the address",
          "examples": [
            "NRW"
          ]
        },
        "country": {
          "type": "string",
          "description": "Country of the address",
          "examples": [
            "Germany"
          ]
        },
        "countryCode": {
          "type": "string",
          "description": "Countrycode of the address' country",
          "examples": [
            "DE"
          ]
        },
        "primaryContact": {
          "type": "string",
          "description": "Name of the primary contact of the address",
          "examples": [
            "Hermann Schmitz"
          ]
        },
        "label":{
          "type": "string",
          "description": "Can be used to label the address",
          "default": "primary",
          "examples": [
            "primary",
            "secondary"
          ]
        }
      },
      "additionalProperties": false
    },
    "contactData": {
      "type": "object",
      "description": "Phone information",
      "properties": {
        "value": {
          "type": "string",
          "description": "Value of the contact data",
          "examples": [
            "example@test.de",
            "0123456789"
          ]
        },
        "type": {
          "type": "string",
          "description": "Type of the contact data",
          "examples": [
            "phone",
            "email",
            "url",
            "fax",
            "social media"
          ]
        },
        "label":{
          "type": "string",
          "description": "Used to specify the contact data with a label",
          "default": "",
          "examples": [
            "businessMobile",
            "support",
            "homepage",
            "privateFax",
            "linkedin"
          ]
        },
        "description":{
          "type": "string",
          "description": "Can be used for a categorization of same types of contact data or for additional information",
          "default": "primary",
          "examples": [
            "primary",
            "secondary"
          ]
        }
      }
    },
    "category": {
      "type": "object",
      "description": "Category of the person / organization",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the category the person / organization belongs to",
          "examples": [
            "customer",
            "supplier",
            "prospect"
          ]
        },
        "label": {
          "type": "string",
          "description": "Used to label the category",
          "examples": [
            "a customer"
          ]
        }
      }
    },
    "calendar": {
      "type": "object",
      "description": "Phone information",
      "properties": {
        "calendar": {
          "type": "string",
          "description": "URI to the calendar of the person",
          "examples": [
            "http://www.example.com/calA"
          ]
        },
        "busyCalendar": {
          "type": "string",
          "description": "URI to get see when the person is available/blocked",
          "examples": [
            "http://www.example.com/busy/janedoe"
          ]
        },
        "requestCalendar": {
          "type": "string",
          "description": "URI to request an appointment with the person",
          "examples": [
            "janedoe@example.com"
          ]
        },
        "label":{
          "type": "string",
          "description": "Used to label the calendar",
          "default": "primary",
          "examples": [
            "primary",
            "secondary"
          ]
        }
      }
    }
  }
}
