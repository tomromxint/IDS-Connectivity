{
  "$schema":"http://json-schema.org/schema#",
  "$id":"https://github.com/openintegrationhub/Data-and-Domain-Models/blob/master/src/main/schema/collaboration/collaborationelement.json",
  "title":"CollaborationElement",
  "description":"Describes the Collaboration Element",
  "type":"object",
  "properties": {
    "header":{
      "description":"header information of the element",
      "allOf": [
        {
          "$ref":"#/definitions/header"
        }
      ]
    },
    "date":{
      "description":"date information of the element",
      "allOf": [
				{
        "$ref":"#/definitions/date"
        }
      ]
    },
    "properties":{
      "description":"properties information of the element",
      "allOf": [
				{
        "$ref":"#/definitions/properties"
        }
      ]
    },
    "content":{
      "description":"content information of the element",
      "allOf": [
				{
        "$ref":"#/definitions/content"
        }
      ]
    },
    "attachments":{
      "type":"array",
      "description":"attachment information of the element",
      "items":{
        "$ref":"#/definitions/attachment"
      }
    }
  },
  "definitions":{
    "header":{
      "type":"object",
      "properties":{
        "from":{
          "type":"string",
          "description":"E-Mail of sender",
          "examples":[
            "john.doe@email.com"
          ]
        },
        "to":{
          "type":"array",
          "description":"E-mail of receiver(s)",
          "examples":[
            "jane.doe@email.com"
          ],
          "items":{
            "type": "string"
          }
        },
        "cc":{
          "type":"array",
          "description":"E-mail of the contact(s) in copy",
          "examples":[
            "janet.doe@email.com"
          ],
          "items":{
            "type": "string"
          }
        },
        "bcc":{
          "type":"array",
          "description":"E-mail of the contact(s) in blind copy",
          "examples":[
            "jonathan.doe@email.com"
          ],
          "items":{
            "type": "string"
          }
        },
        "subject":{
          "type":"string",
          "description":"Subject line of the e-mail",
          "examples":[
            "RE: Your Question"
          ]
        }
      }
    },
    "date":{
      "type":"object",
      "properties":{
        "date":{
          "type":"string",
          "format":"date",
          "description":"Date",
          "examples":[
            "2018-01-01"
          ]
        },
        "day":{
          "type":"string",
          "description":"Day of the week",
          "examples":[
            "Monday"
          ],
          "enum":[
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ]
        },
        "time":{
          "type":"string",
          "format":"time",
          "description":"Timestamp",
          "examples":[
            "10:10:10"
          ]
        }
      }
    },
    "properties":{
      "type":"object",
      "properties":{
        "messageID":{
          "type":"string",
          "description":"Unique ID of the E-Mail"
        },
        "language":{
          "type":"string",
          "description":"Language of the e-mail content",
          "examples":[
            "en"
          ]
        },
        "authentication":{
          "type":"string",
          "description":"Authentication Result",
          "examples":[
            "spf=pass smtp.mailfrom=email.com"
          ]
        },
        "mimeVersion":{
          "type":"number",
          "description":"Version of MIME",
          "examples":[
            1.3
          ]
        }
      }
    },
    "content":{
      "type":"object",
      "properties":{
        "format":{
          "type":"string",
          "description":"Format of the email content",
          "examples":[
            "HTML"
          ]
        },
        "content":{
          "type":"string",
          "description":"Content of the e-mail",
          "examples":[
            "Dear John, please find attached"
          ]
        }
      }
    },
    "attachment":{
      "type":"object",
      "properties":{
        "type":{
          "type":"string",
          "description":"Datatype of the attachment",
          "examples":[
            "JPG"
          ]
        },
        "size":{
          "type":"string",
          "description":"Datasize of the e-mail attachment",
          "examples":[
            "54 KB"
          ]
        }
      }
    }
  }
}
